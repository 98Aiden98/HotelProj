{
  "name": "hotelproj",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @hotelproj/backend",
    "w": "pnpm --filter @hotelproj/webapp",
    "dev": "pnpm -r -parallel dev",
    "lint": "concurrently \"pnpm b lint\" \"pnpm w lint\"",
    "types": "concurrently \"pnpm b types\" \"pnpm w types\"",
    "prepare": "husky"
  },
  "lint-staged": {
     "complex-file-pattern-for-files-that-get-prettified": [
       "replace '\\r\\n' '\n'",
       "prettier --write",
       "git add"
     ]
   },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "prettier-eslint": "^16.3.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "overrides": {
    "eslint": "9.20.0"
  }
}
